<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:focusable="false"
    android:scrollX="0dp"
    android:scrollY="0dp"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.jskgmail.lifesaver.MainActivity"
    tools:showIn="@layout/app_bar_main">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/relativeLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.v7.widget.CardView
                android:id="@+id/cardView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="14dp"
                android:background="@color/colorPrimary"
                app:cardCornerRadius="2dp"
                app:cardElevation="1dp">

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/cardView"
                    android:layout_marginStart="18dp"

                    android:focusable="true"
                    android:paddingTop="3dp"
                    android:selectAllOnFocus="true"
                    android:text="Your area is safe of earthquake or any such disaster"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                    android:textColor="@android:color/holo_green_dark"
                    android:textSize="14sp" />


            </android.support.v7.widget.CardView>


        </RelativeLayout>


        <android.support.v7.widget.CardView
            android:id="@+id/cardView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="15dp" />

        <android.support.v7.widget.CardView
            android:id="@+id/cardView3"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/textView4"
            android:focusable="false"
            app:cardCornerRadius="2dp"
            app:cardElevation="1dp">

            <ListView
                android:id="@+id/lv"
                style="@android:style/Widget.DeviceDefault.ExpandableListView"
                android:layout_width="wrap_content"
                android:layout_height="150dp"
                android:layout_alignParentEnd="true"
                android:layout_below="@+id/textView4"
                android:layout_marginTop="2dp"
                android:focusable="false"
                android:paddingLeft="3dp" />
        </android.support.v7.widget.CardView>

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="Your Emergency Contacts :"
            android:textColor="@android:color/holo_red_dark"
            android:layout_below="@+id/relativeLayout"
            android:layout_alignStart="@+id/cardView2" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/textView8"
            android:layout_marginTop="12dp"
            app:srcCompat="@drawable/cast_abc_scrubber_control_off_mtrl_alpha" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/cardView2"
            android:layout_below="@+id/imageView3"
            android:layout_marginTop="10dp"
            android:text="Safety Tips : Earthquake"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/textView3"
            android:layout_marginTop="23dp"
            app:srcCompat="@drawable/cast_abc_scrubber_control_off_mtrl_alpha" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/textView3"
            android:layout_below="@+id/imageView"
            android:layout_marginBottom="4dp"
            android:layout_marginTop="11dp"
            android:text="Safety Tips : Flood"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/textView3"
            android:layout_below="@+id/cardView3"
            android:layout_marginTop="12dp"
            android:text="Featured Videos :"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/floatingActionButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:clickable="true"
            app:backgroundTint="@color/cardview_light_background"
            app:fabSize="mini"
            app:srcCompat="@drawable/ic_add_black_24dp"
            android:layout_below="@+id/textView4"
            android:layout_centerHorizontal="true" />
    </RelativeLayout>
</android.support.v4.widget.NestedScrollView>